{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "$schema": {
        "type": "string"
      },
      "version": {
        "type": "string",
        "description": "The version of the shortcut program."
      },
      "shortcuts": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "description": "Optional. The name or description of the shortcut."
            },
            "keys": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "The keyboard shortcut combination."
            },
            "command": {
              "type": "string",
              "description": "The command to be performed when the shortcut is triggered."
            }
          },
          "required": ["keys", "command"],
          "additionalProperties": false
        }
      }
    },
    "required": ["version", "shortcuts"],
    "additionalProperties": false
  }
  